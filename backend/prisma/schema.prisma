generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CLIENT
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String  // Ser√° armazenado como hash
  role     Role    @default(CLIENT)
  createdAt DateTime @default(now())
}

model CryptoPrice {
  id              String  @id @default(uuid())
  coinId         String  @unique // ID da CoinGecko (ex: BTC)
  marketCap      Float?
  change24h      Float?
  change7d       Float?
  allTimeHigh    Float?
  allTimeLow     Float?
  currentPrice   Float
  updatedAt      DateTime @updatedAt
}

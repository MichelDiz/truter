generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CLIENT
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String  // Ser√° armazenado como hash
  role     Role    @default(CLIENT)
  createdAt DateTime @default(now())
}